extends templates/head
block content
  .bg-dark.p-5
    h4.text-danger.text-uppercase #{product.title}
    form.p-5(action='/products', method='POST')
      input.btn.btn-success.mr-2(type='text', value=product.title, name='title')
      input.btn.btn-light.mr-2(type='number', value=product.price, name='price')
      input(type='hidden', value=product._id, name='id')
      button.btn.btn-submit Submit